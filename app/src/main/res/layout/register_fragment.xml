<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/loginLoginET"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/custom_login_icon"
        android:drawableLeft="@drawable/custom_login_icon"
        android:drawablePadding="6dp"
        android:hint="@string/login_string"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_marginTop="7dp"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:id="@+id/loginPasswordET"
        android:inputType="textPassword"
        android:hint="@string/password_string"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/custom_password_icon"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@id/loginLoginET"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/custom_password_icon" />
    <EditText
        android:layout_marginTop="7dp"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:id="@+id/loginPasswordconfirmET"
        android:inputType="textPassword"
        android:hint="@string/confirm_password"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_gravity="center"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/custom_password_icon"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@id/loginPasswordET"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/custom_password_icon" />


    <Button
        android:id="@+id/login_btn"
        app:backgroundTint="@null"
        android:background="@drawable/custom_login_btn"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:text="Зарегистрироваться"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginPasswordET" />

    <TextView
        android:id="@+id/HaveYouAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="2dp"
        android:autoLink="all"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:text="Уже есть аккаунта?"
        android:textColor="#636363"
        android:textColorLink="#FF6200EE"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_btn" />

    <TextView
        android:id="@+id/createAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:autoLink="all"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="cursive"
        android:layout_gravity="center"
        android:text="Войдите здесь."
        android:textColor="#000000"
        android:textColorLink="#FF6200EE"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HaveYouAccountText" />
</LinearLayout>
