<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:paddingVertical="10dp"
    android:weightSum="4">

    <!-- Кнопка "Главная" -->
    <Button
        android:id="@+id/home_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:drawableTop="@drawable/home_ic"
        android:drawableTint="@color/icon_inactive"
        android:text="Главная"
        android:textSize="12sp"
        android:textColor="@color/icon_inactive"
        android:gravity="center"
        android:padding="6dp" />

    <!-- Кнопка "Мои объявления" -->
    <Button
        android:id="@+id/advertisements_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:drawableTop="@drawable/outline_checklist_24"
        android:drawableTint="@color/icon_inactive"
        android:text="Мои объявления"
        android:textSize="12sp"
        android:textColor="@color/icon_inactive"
        android:gravity="center"
        android:padding="6dp"
        android:maxLines="2"
        android:textAlignment="center" />

    <!-- Кнопка "Чаты" -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="top|end"
            android:background="@drawable/badge_unactive"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:gravity="center" />
        <Button
            android:id="@+id/chat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@android:drawable/ic_menu_send"
            android:drawableTint="@color/icon_inactive"
            android:text="Чаты"
            android:textSize="12sp"
            android:textColor="@color/icon_inactive"
            android:gravity="center"
            android:padding="1dp" />
        </FrameLayout>
    </LinearLayout>
    <!-- Кнопка "Мой профиль" -->
    <Button
        android:id="@+id/my_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:drawableTop="@drawable/ic_profile"
        android:drawableTint="@color/icon_inactive"
        android:text="Мой профиль"
        android:textSize="12sp"
        android:textColor="@color/icon_inactive"
        android:gravity="center"
        android:padding="6dp" />

</LinearLayout>